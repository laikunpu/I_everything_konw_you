<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sc_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/lly_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" >

                <uk.co.senab.bitmapcache.samples.NetworkedCacheableImageView
                    android:id="@+id/img_cover"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_bookName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="名字" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_bookAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="XXX" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_modifiedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XX年XX月XX日" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom" >

                        <Button
                            android:id="@+id/btn_online"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_normal"
                            android:layout_marginRight="1dp"
                            android:enabled="false"
                            android:text="无在线" />

                        <Button
                            android:id="@+id/btn_download"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/btn_normal"
                            android:enabled="false"
                            android:text="无下载" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_summary"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="XXXXXXXXXXXXXXXXXXXXX" />
                    </ScrollView>

                    <CheckBox
                        android:id="@+id/cbx_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/cbx_txt"
                        android:button="@null"
                        android:checked="false" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#47AAA8" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#5AC7C5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txt_related"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="相关阅读" />

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#47AAA8" />

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#5AC7C5" />

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="相关评论" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#47AAA8" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#5AC7C5" />
            </LinearLayout>

            <com.smith.view.MyGridView
                android:id="@+id/gd_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="3"
                android:stretchMode="columnWidth" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>